<launch>
    <arg name="gui" default="true"/>
    
    <!-- Diagnostic aggregator -->
    <node pkg="diagnostic_aggregator" type="aggregator_node" name="diagnostic_aggregator" >
        <rosparam command="load" file="$(find spencer_diagnostics)/launch/diagnostic_analyzers.yaml"/>
    </node>
 
    <!-- Robot monitor GUI (useful for local testing, disabled when running on robot) -->
    <node name="rqt_robot_monitor" pkg="rqt_robot_monitor" type="rqt_robot_monitor" if="$(arg gui)"/>

</launch>